{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "strict": 2,
    "no-unused-vars": 0,
    "no-console": 0,
    "no-undef": 0,
    "semi": [2, "never"],
    "comma-dangle": ["error", "never"]
  },
  "extends": "eslint:recommended"
}
