{
  "name": "piro",
  "version": "1.0.0",
  "description": "A scoring app.",
  "main": "index.js",
  "engines": {
    "node": "6.2.1"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "scripts": {
    "start": "node ./server/bin/www",
    "start:watch": "nodemon ./server/bin/www",
    "test": "npm run lint && cd client && babel-tape-runner test/*.js | tap-spec",
    "test:server": "cd server && tape test/*.js | tap-spec",
    "reset-db": "cd server && knex migrate:rollback && knex migrate:latest && knex seed:run",
    "build": "cd client && webpack --progress --profile --colors",
    "build:watch": "cd client && webpack --progress --profile --colors --watch",
    "build-css": "node-sass --include-path scss client/scss/main.scss public/css/main.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "dev": "cd client && webpack-dev-server --hot --inline",
    "lint": "standard",
    "fix": "standard --fix"
  },
  "keywords": [
    "Piro",
    "scoring"
  ],
  "author": "Piro",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.15.2",
    "cookie-parser": "^1.4.3",
    "dotenv": "^2.0.0",
    "express": "^4.14.0",
    "knex": "^0.11.9",
    "passport": "^0.3.2",
    "pg": "^6.0.3",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "socket.io": "^1.4.8"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-tape-runner": "^2.0.1",
    "enzyme": "^2.4.1",
    "nodemon": "^1.10.0",
    "node-sass": "^3.8.0",
    "react-addons-test-utils": "^15.2.1",
    "standard": "^7.1.2",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  }
}
