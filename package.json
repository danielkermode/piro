{
  "name": "piro",
  "version": "1.0.0",
  "description": "A scoring app.",
  "main": "index.js",
  "engines": {
    "node": "6.2.1"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "scripts": {
    "start": "node ./server/bin/www",
    "start:watch": "nodemon ./server/bin/www",
    "test:client": "cd client && babel-tape-runner test/*.js | tap-spec",
    "test:server": "cd server && tape test/*.js | tap-spec",
    "reset-db": "cd server && knex migrate:rollback && knex migrate:latest && knex seed:run",
    "test": "npm run lint && npm run test:client",
    "build": "cd client && webpack --progress --profile --colors",
    "build:watch": "cd client && webpack --progress --profile --colors --watch",
    "lint": "standard --fix",
    "dev": "cd client && webpack-dev-server --hot --inline --history-api-fallback"
  },
  "keywords": [
    "Piro",
    "scoring"
  ],
  "author": "Piro",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.3.0",
    "body-parser": "^1.15.2",
    "cookie-parser": "^1.4.3",
    "dotenv": "^2.0.0",
    "email-validator": "^1.0.4",
    "express": "^4.14.0",
    "immutable": "^3.8.1",
    "knex": "^0.11.9",
    "memory-cache": "^0.1.6",
    "njwt": "^0.3.1",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "pg": "^6.0.3",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.6.0",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "secure-random": "^1.1.1",
    "socket.io": "^1.4.8",
    "whatwg-fetch": "^1.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-tape-runner": "^2.0.1",
    "css-loader": "^0.23.1",
    "enzyme": "^2.4.1",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.0",
    "react-addons-test-utils": "^15.2.1",
    "sass-loader": "^4.0.0",
    "standard": "^7.1.2",
    "style-loader": "^0.13.1",
    "superagent": "^2.1.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  }
}
